@using NotesApp.Dtos
@model NotesApp.Dtos.RegisterDto
@{
    ViewData["Title"] = "Sign In";
}

<h1>Register</h1>

<form asp-controller="User" asp-action="Register" method="post">
    @if (ViewBag.EmailAlreadyOnFile != null)
    {
        <span class="field-validation-error" style="color: red">The email @ViewBag.EmailAlreadyOnFile is already on file, please choose a new email address</span>
    }
    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Name, null, new { style = "color: red" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Email)
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Email, null, new { style = "color: red" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Password)
        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Password, null, new { style = "color: red" })
    </div>
    <div class="form-group">
        <button type="submit" formmethod="post">Register</button>
    </div>
</form>